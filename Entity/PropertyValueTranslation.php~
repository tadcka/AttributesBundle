namespace Tadcka\AttributesBundle\Entity;

use Doctrine\ORM\Mapping as ORM;

/**
 * @ORM\Entity
 * @ORM\Table(name="tadcka_property_value_translation")
 */
class PropertyValueTranslation
{
    /**
     * @var integer $id
     *
     * @ORM\Column(name="id", type="integer")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="AUTO")
     */
    private $id;

    /**
     * @var \Tadcka\AttributesBundle\Entity\PropertyValue $entity
     *
     * @ORM\ManyToOne(targetEntity="\Tadcka\AttributesBundle\Entity\PropertyValue", inversedBy="translations")
     * @ORM\JoinColumns({
     *   @ORM\JoinColumn(name="property_value_id", referencedColumnName="id", onDelete="CASCADE", nullable=false)
     * })
     */
    private $entity;

    /**
     * @var string $lang
     *
     * @ORM\Column(name="lang", type="string", length=31, nullable=true)
     */
    private $lang;

    /**
     * @var string $name
     *
     * @ORM\Column(name="name", type="string", length=255, nullable=false)
     */
    private $name;
}
